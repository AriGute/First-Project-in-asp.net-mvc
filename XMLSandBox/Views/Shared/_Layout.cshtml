<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XMLSandBox</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/cdStyle.css" />
</head>
<body>
    <header style="box-shadow: 0px 2px 10px">
        <a style="color: black; text-decoration:none; " class="display-1" asp-area="" asp-controller="Home" asp-action="Index">XMLSandBox</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container">
        </div>
        <hr style="border:1px solid black" />

    </header>
    <div style="display:flex">
        <div class="container align-items-center">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
            <div style="border-left: 2px solid grey; border-right: 2px solid grey; height: 100vw">
                <ul style="display:flex; flex-direction:column; padding: 5px">
                    <li class="nav-item">
                        <a class="nav-link text-dark display-4" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark display-4" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark display-4" asp-area="" asp-controller="Cds" asp-action="Index">Cds</a>
                    </li>
                </ul>
            </div>
    </div>

    <footer style="background-color:lightgray" class="border-top  text-muted">
        <div class="container">
            &copy; 2021 - XMLSandBox - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
